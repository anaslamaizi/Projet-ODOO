                            <field name="abbreviation"/>
                            <field name="description"/>
                            <field name="website"/>
                            <field name="address"/>
                            <field name="establishment"/>
                        </group>
                        <notebook>
                            <page string="Degrees">
                                <field name="degrees" widget="one2many_list"/>
